{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
